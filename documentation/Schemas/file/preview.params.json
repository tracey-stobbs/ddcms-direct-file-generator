{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/mcp/file.preview.params.json",
    "title": "file.preview params",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "sun": {
            "type": "string",
            "minLength": 1
        },
        "fileType": {
            "type": "string",
            "enum": [
                "EaziPay",
                "SDDirect",
                "Bacs18PaymentLines",
                "Bacs18StandardFile"
            ]
        },
        "numberOfRows": {
            "type": "integer",
            "minimum": 1
        },
        "includeOptionalFields": {
            "oneOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    },
                    "minItems": 1
                }
            ]
        },
        "hasInvalidRows": {
            "type": "boolean"
        },
        "includeHeaders": {
            "type": "boolean",
            "description": "SDDirect only"
        },
        "forInlineEditing": {
            "type": "boolean"
        },
        "processingDate": {
            "type": "string"
        },
        "dateFormat": {
            "type": "string",
            "enum": [
                "YYYY-MM-DD",
                "DD-MMM-YYYY",
                "DD/MM/YYYY"
            ]
        },
        "variant": {
            "type": "string",
            "enum": [
                "DAILY",
                "MULTI"
            ],
            "description": "Bacs18PaymentLines only"
        }
    },
    "required": [
        "sun",
        "fileType"
    ]
}