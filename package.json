{
  "name": "ddcms-direct-file-builder",
  "version": "1.0.0",
  "description": "API that generates files in predefined formats with randomly generated data",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "file-generator",
    "api",
    "typescript",
    "express"
  ],
  "engines": {
    "node": ">=18.0.0"
  },  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "@faker-js/faker": "^8.0.2",
    "luxon": "^3.3.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/luxon": "^3.3.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  }
}
