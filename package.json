{
  "name": "ddcms-direct-file-creator",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:mcp": "node dist/mcp/server.js",
    "dev": "ts-node src/index.ts",
    "watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "backlog:update": "ts-node scripts/backlog-progress.ts --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "express": "^5.0.0",
    "json-rpc-2.0": "^1.7.0",
    "luxon": "^3.4.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/luxon": "^3.6.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "eslint": "^8.56.0",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.4.0",
    "zod": "^3.23.8",
    "husky": "^9.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/node"
      ]
    }
  },
  "prepare": "husky install"
}