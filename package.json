{
    "name": "ddcms-direct-file-creator",
    "version": "1.0.0",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "watch": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest watch",
        "lint": "npx eslint . --ext .ts",
        "prepare": "husky",
        "format": "prettier --write \"**/*.{ts,js,json,md,mdx,css,scss,yml,yaml}\"",
        "issues:import": "ts-node src/scripts/github/issues-import.ts",
        "backlog:start": "ts-node src/scripts/backlog/manage.ts start",
        "backlog:pr": "ts-node src/scripts/backlog/manage.ts pr",
        "git:commit-template": "git config commit.template .github/commit-template.txt"
    },
    "dependencies": {
        "@faker-js/faker": "^8.4.1",
        "@typescript-eslint/eslint-plugin": "^8.41.0",
        "@typescript-eslint/parser": "^8.41.0",
        "ajv": "^8.13.0",
        "express": "^5.0.0",
        "luxon": "^3.4.4"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.34.0",
        "@types/express": "^5.0.3",
        "@types/luxon": "^3.7.1",
        "@types/node": "^22.5.1",
        "@types/supertest": "^6.0.3",
        "@types/swagger-ui-express": "^4.1.8",
        "@typescript-eslint/eslint-plugin": "^8.41.0",
        "@typescript-eslint/parser": "^8.41.0",
        "@vitest/coverage-v8": "^1.4.0",
        "dotenv": "^17.2.1",
        "eslint": "^9.34.0",
        "express-rate-limit": "^8.0.1",
        "globals": "^16.3.0",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "prettier": "^2.8.8",
        "prom-client": "^15.1.3",
        "supertest": "^7.1.4",
        "swagger-ui-express": "^5.0.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.41.0",
        "vitest": "^1.4.0",
        "zod": "^4.1.5"
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,mdx,yml,yaml}": [
            "prettier --write"
        ]
    },
    "engines": {
        "node": ">=22 <23"
    },
    "volta": {
        "node": "22.17.0"
    }
}
