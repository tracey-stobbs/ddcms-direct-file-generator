{
  "name": "ddcms-direct-file-creator",
  "version": "1.0.0",
  "description": "A Node.js API that generates financial data files in predefined formats with randomly generated data",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "dev:vite": "vite",
    "build": "tsc && vite build",
    "start": "node dist/app.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:api": "node scripts/test-api.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "financial-data",
    "file-generator",
    "api",
    "typescript",
    "express",
    "testing"
  ],
  "author": "GitHub Copilot",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "express": "^4.18.2",
    "luxon": "^3.4.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.56.0",
    "globals": "^16.3.0",
    "supertest": "^7.1.3",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
